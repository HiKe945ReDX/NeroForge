# ===== GUIDORA AI PLATFORM - ENVIRONMENT TEMPLATE =====
# Copy this file to your main .env and fill with actual values
# DO NOT commit actual .env file to git - use this template only

# ===== CORE SETTINGS =====
NODE_ENV=development
ENVIRONMENT=development

# ===== DATABASE =====
MONGODB_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER/YOUR_DATABASE
MONGODB_DB_NAME=guidora_db
MONGODB_MAX_CONNECTIONS=100

# ===== REDIS =====
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=your-redis-password
REDIS_MAX_CONNECTIONS=20
REDIS_TTL_SECONDS=3600

# ===== AUTHENTICATION =====
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
SESSION_SECRET=your-session-secret-key

# ===== OAUTH CREDENTIALS =====
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===== AI CONFIGURATION =====
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/keys/Guidora-key.json
GEMINI_API_KEY=your-gemini-api-key

# ===== CORS & FRONTEND =====
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# ===== PERFORMANCE =====
MAX_RESUME_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=60
GENAI_TIMEOUT_SECONDS=60

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== SERVICE PORTS =====
USER_SERVICE_PORT=5007
AI_GUIDANCE_PORT=5001
CAREER_ATLAS_PORT=5002
GAMIFICATION_PORT=5003
SIMULATION_PORT=5004
PORTFOLIO_PORT=5005
NOTIFICATION_PORT=5006
API_GATEWAY_PORT=4000

# ===== FEATURE FLAGS =====
DEMO_MODE=true
CACHE_LLM_RESPONSES=true
LINKEDIN_SCRAPER_ENABLED=true
